<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pooja.toddlertiles.Scoreboard"
    android:background="@drawable/xyz"
    android:orientation="vertical"
    android:gravity="center">
    
    <TextView
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="You won!"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:background="#f7c3c7"
        android:layout_marginBottom="30dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/score_message"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#05c0c4"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Score"
            android:textAllCaps="false"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:fontFamily="casual" />

        <TextView
            android:id="@+id/scorebox"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:text="153"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="150sp"
            android:background="#05c0c4"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_message"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Time Taken"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="#eec9ae"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/timebox"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="02:12"
            android:textSize="30sp"
            android:fontFamily=""
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="#eec9ae"
            android:layout_marginBottom="30dp"
            android:gravity="center"/>

    </LinearLayout>
    
    <Button
        android:id="@+id/play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:fontFamily=""
        android:textSize="30sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:background="#e0cac2"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"/>

</LinearLayout>
