<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xyz"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.pooja.toddlertiles.Scoreboard">

    <TextView
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="#f7c3c7"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="You won!"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score_message"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#05c0c4"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Score"
            android:textAllCaps="false"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:fontFamily="casual" />

        <TextView
            android:id="@+id/scorebox"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:background="#05c0c4"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="153"
            android:textAllCaps="false"
            android:textSize="150sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_message"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="#eec9ae"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Time Taken"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timebox"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="#eec9ae"
            android:fontFamily=""
            android:gravity="center"
            android:text="02:12"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e0cac2"
            android:layout_marginEnd="8dp"
            android:fontFamily=""
            android:padding="10dp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/play_again"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backto_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e0cac2"
            android:layout_marginStart="8dp"
            android:fontFamily=""
            android:padding="10dp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/back_to_menu"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
