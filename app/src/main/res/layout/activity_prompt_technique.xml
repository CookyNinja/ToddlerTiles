<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pooja.toddlertiles.PromptTechnique"
    android:orientation="vertical"
    android:background="@drawable/promptbackground">

    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Text Instructions at the start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner4"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Instructions on the fly"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Instructions on the fly"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundcorner4"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Video Demo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner4"
        android:textStyle="bold"
        android:soundEffectsEnabled="true"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hand Gestures on the fly"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundcorner4"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:soundEffectsEnabled="true"/>

</LinearLayout>
