<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toddlertilesapp.pooja.toddlertiles">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.toddlertilesapp.pooja.toddlertiles.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.toddlertilesapp.pooja.toddlertiles.PromptTechnique"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.toddlertilesapp.pooja.toddlertiles.TileGame"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.toddlertilesapp.pooja.toddlertiles.Rating"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.toddlertilesapp.pooja.toddlertiles.Scoreboard"
            android:screenOrientation="portrait" />

        <service
            android:name="com.toddlertilesapp.pooja.toddlertiles.SoundService"
            android:enabled="true"/>

    </application>

</manifest>